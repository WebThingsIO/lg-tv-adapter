{
  "name": "lg-tv-adapter",
  "display_name": "LG webOS TV",
  "version": "0.3.0",
  "description": "LG webOS TV adapter for Mozilla WebThings Gateway",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla-iot/lg-tv-adapter.git"
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "lg",
    "webos",
    "tv"
  ],
  "author": "Mozilla IoT",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla-iot/lg-tv-adapter/issues"
  },
  "homepage": "https://github.com/mozilla-iot/lg-tv-adapter#readme",
  "dependencies": {
    "ip-regex": "^4.1.0",
    "lgtv2": "^1.4.1",
    "local-devices": "2.0.0",
    "mkdirp": "^0.5.1",
    "node-persist": "^3.0.5",
    "node-ssdp": "^4.0.0",
    "ping": "^0.2.2",
    "wol": "^1.0.6"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.4.0"
  },
  "files": [
    "LICENSE",
    "README.md",
    "SHA256SUMS",
    "index.js",
    "lib/lg-tv-adapter.js",
    "lib/lg-tv-database.js",
    "lib/lg-tv-device.js",
    "lib/lg-tv-notifier.js",
    "lib/lg-tv-property.js",
    "manifest.json",
    "node_modules"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "devices": []
    },
    "schema": {
      "type": "object",
      "required": [
        "devices"
      ],
      "properties": {
        "devices": {
          "type": "array",
          "description": "List of IP addresses of TVs",
          "items": {
            "type": "string",
            "description": "IP address"
          }
        }
      }
    }
  }
}
